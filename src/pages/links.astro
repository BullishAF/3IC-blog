---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Useful Crypto Links</div>
  </div>

  <HorizontalCard
    title="Connect on Twitter"
    img="/twitter.jpg"
    desc="You can't be in crypto and NOT be on twitter and interact with crypto-twitter."
    url="https://twitter.com/RP_BullishAF"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Coinbase"
    img="/coinbase.jpg"
    desc="Probably the safest & easiest place to buy crypto."
    url="https://coinbase.com/join/RUPPE_O?src=referral-link"
  />
   <HorizontalCard
    title="Cryptofinally DeFi Hub"
    img="/crypto.jpg"
    desc="A lot of good resources on web3, defi, using metamask wallet and more."
    url="https://cryptofinally.io/defi-hub-start-page"
  />
</BaseLayout>
